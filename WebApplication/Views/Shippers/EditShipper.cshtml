@model Shippers
@{
    ViewBag.Title = "EditShipper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Shipper Update Page</h2>
<br />

@using (Html.BeginForm("EditShipper", "Shippers", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("ID")
        @Html.TextBoxFor(x => x.ShipperID, new { @class = "form-control" })
        <br />
        @Html.Label("Shipper CompanyName")
        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
        <br />
        @Html.Label("Shipper Phone")
        @Html.TextAreaFor(x => x.Phone, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-success">Update</button>
    </div>
}



